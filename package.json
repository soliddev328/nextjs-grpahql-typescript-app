{
  "name": "graphql-let",
  "version": "0.1.0",
  "bin": {
    "graphql-let": "bin/graphql-let.js"
  },
  "files": [
    "bin",
    "dist",
    "loader.js",
    "tsconfig.json"
  ],
  "dependencies": {
    "@graphql-codegen/core": "^1.9.1",
    "fast-glob": "^3.1.1",
    "graphql-toolkit": "^0.7.4",
    "loader-utils": "^1.2.3",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "yaml": "^1.7.2"
  },
  "devDependencies": {
    "@apollo/react-common": "^3.1.3",
    "@apollo/react-components": "^3.1.3",
    "@apollo/react-hoc": "^3.1.3",
    "@apollo/react-hooks": "^3.1.3",
    "@types/eslint": "^6.1.3",
    "@types/eslint-plugin-prettier": "^2.2.0",
    "@types/loader-utils": "^1.1.3",
    "@types/minimist": "^1.2.0",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^12.12.14",
    "@types/react": "^16.9.16",
    "@types/webpack": "^4.41.0",
    "@types/yaml": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.17.0",
    "graphql": "^14.5.8",
    "graphql-tag": "^2.10.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "typescript": "^3.7.3"
  },
  "peerDependencies": {
    "graphql": "*",
    "graphql-tag": "*",
    "react": "*",
    "typescript": "*"
  },
  "lint-staged": {
    "*.ts": [
      "npm run fix",
      "git add --force"
    ]
  },
  "scripts": {
    "lint": "eslint --ext .ts --ext .tsx --ignore-path .gitignore --ignore-pattern \"!**/.*\" .",
    "fix": "yarn run lint --fix",
    "test": "tsc --noEmit",
    "build": "rimraf dist && tsc --declaration --declarationMap",
    "prepare": "yarn run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
