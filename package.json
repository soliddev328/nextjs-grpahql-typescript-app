{
  "name": "react-apollo-loader",
  "version": "0.2.2",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@graphql-codegen/core": "^1.9.1",
    "@graphql-codegen/typescript-operations": "^1.9.1",
    "@graphql-codegen/typescript-react-apollo": "^1.9.1",
    "graphql-toolkit": "^0.7.4",
    "loader-utils": "^1.2.3",
    "mkdirp": "^0.5.1"
  },
  "devDependencies": {
    "@apollo/react-common": "^3.1.3",
    "@apollo/react-components": "^3.1.3",
    "@apollo/react-hoc": "^3.1.3",
    "@apollo/react-hooks": "^3.1.3",
    "@types/eslint": "^6.1.3",
    "@types/eslint-plugin-prettier": "^2.2.0",
    "@types/loader-utils": "^1.1.3",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^12.12.14",
    "@types/react": "^16.9.16",
    "@types/webpack": "^4.41.0",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-prettier": "^3.1.1",
    "graphql": "^14.5.8",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "typescript": "^3.7.3",
    "webpack": "^4.41.2"
  },
  "peerDependencies": {
    "@apollo/react-common": "*",
    "@apollo/react-components": "*",
    "@apollo/react-hoc": "*",
    "@apollo/react-hooks": "*",
    "graphql": "*",
    "graphql-tag": "*",
    "react": "*"
  },
  "lint-staged": {
    "*.ts": [
      "npm run fix",
      "git add --force"
    ]
  },
  "scripts": {
    "lint": "eslint --ext .ts --ext .tsx --ignore-path .gitignore --ignore-pattern \"!**/.*\" .",
    "fix": "yarn run lint --fix",
    "test": "tsc --noEmit",
    "build": "rimraf dist && tsc --declaration --declarationMap",
    "prepack": "yarn run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
